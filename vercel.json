{
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/manifest.webmanifest", "destination": "/client/dist/manifest.webmanifest" },
    { "source": "/sw.js", "destination": "/client/dist/sw.js" },
    { "source": "/assets/(.*)", "destination": "/client/dist/assets/$1" },
    { "source": "/(.*)", "destination": "/client/dist/index.html" }
  ],
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs18.x" }
  }
}
