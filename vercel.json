{
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vercel/vite-plugin"
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

