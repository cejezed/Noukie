{
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/dist/index.js" },
    { "source": "/assets/(.*)", "destination": "/client/dist/assets/$1" },
    { "source": "/(.*)", "destination": "/client/dist/index.html" }
  ]
}